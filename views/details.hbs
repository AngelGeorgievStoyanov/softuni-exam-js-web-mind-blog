<div class="details-container">
    <div class="details-container-image">
        <img src="{{blog.imageUrl}}">
    </div>
    <div class="details-container-info">
        <h2>{{blog.title}}</h2>
        <h3>{{blog.category}}</h3>
        <h3>{{emailOwner}}</h3>
        <!--If there are followers-->
        {{#if allUsersFollows}}
        <h4>{{allUsersFollows}}</h4>
        <!--If there are no followers-->
        {{else}}
        <h4>There are no followers yet!</h4>
        {{/if}}
    </div>
    <div class="details-container-content">
        <p>{{blog.content}}</p>
    </div>
    <div class="btn-container">

        <!-- logged in user who has not yet followed the blog-->

        {{#if isUser}}

        {{#if hasFallow }}
        <p class="follow-pub">You already follow this blog!</p>
        {{else}}

        <a href="/blogs/follow/{{blog._id}}">Follow</a>
        <!-- logged in user who has already followed the blog-->
        {{/if}}

        {{/if}}
        {{#if isOwner}}
        <a href="/blogs/edit/{{blog._id}}">Edit</a>
        <a href="/blogs/delete/{{blog._id}}">Delete</a>
        {{/if}}
    </div>
</div>